{
  "compilerOptions" : {
    "lib"                            : [ "es2017", "dom" ],
    "module"                         : "CommonJS",
    "moduleResolution"               : "node",
    "noEmitOnError"                  : true,
    "outDir"                         : "./dist/",
    "removeComments"                 : true,
    "resolveJsonModule"              : true,
    "sourceMap"                      : true,
    "suppressImplicitAnyIndexErrors" : true,
    "target"                         : "ES2017"
  },
  "include" : [
    "src/ts/**/*"
  ]
}
